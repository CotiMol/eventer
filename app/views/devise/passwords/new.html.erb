<style type="text/css">
	 body {
	   padding-top: 20px;
	   padding-bottom: 40px;
	   background-color: #f5f5f5;
	 }

	 .form-signin {
	   max-width: 300px;
	   padding: 19px 29px 29px;
	   margin: 0 auto 20px;
	   background-color: #fff;
	   border: 1px solid #e5e5e5;
	   -webkit-border-radius: 5px;
	      -moz-border-radius: 5px;
	           border-radius: 5px;
	   -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
	      -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
	           box-shadow: 0 1px 2px rgba(0,0,0,.05);
	 }
	 .form-signin .form-signin-heading,
	 .form-signin .checkbox {
	   margin-bottom: 10px;
	 }
	 .form-signin input[type="email"],
	 .form-signin input[type="password"] {
	   font-size: 16px;
	   height: auto;
	   margin-bottom: 15px;
	   padding: 7px 9px;
	 }

</style>

<div class="container">
	
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => "form-signin", :method => :post}) do |f| %>  
        <h2 class="form-signin-heading">Reset de Clave</h2>
		<%= devise_error_messages! %>
		<%= f.email_field :email, :class => "input-block-level", :placeholder => "Email" %>
		<%= f.submit "Enviarme instrucciones", :class => "btn btn-large btn-primary" %>
	<%end%>

</div> <!-- /container -->

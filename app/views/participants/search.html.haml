= render '/commons/notice'

.row-fluid
  .span12.box.bordered-box.orange-border{ :style => "margin-bottom:0;" }
    .box-header.orange-background
      .title Participantes encontrado
    .box-content.box-no-padding
      .responsive-table
        .scrollable-area
          %table.table.table-striped{ :style => "margin-bottom:0;" }
            %thead
              %tr
                %th Nombre
                %th Apellido
                %th Evento
                %th Fecha
                %th Estado
            %tbody
              - @participants.each do |participant|
                -#%td= link_to participant.lname, participant
                %tr
                  %td
                    %a{ :href => "/events/#{participant.event.id}/participants" }
                      = participant.fname
                  %td
                    %a{ :href => "/events/#{participant.event.id}/participants" }
                      =participant.lname
                  %td
                    %a{ :href => "/events/#{participant.event.id}/participants" }
                      =participant.human_status
                  %td
                    %a{ :href => "/events/#{participant.event.id}" }
                      = participant.event.event_type ? participant.event.event_type.name : '<sin tipo evento>' 
                  %td
                    %a{ :href => "/events/#{participant.event.id}" }
                      = participant.event.date

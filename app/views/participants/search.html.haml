.page-header
  %h1.pull-left
    %i.icon-group
    %span Participantes encontrados

= render '/commons/notice'

.row-fluid
  .span12.box.bordered-box.orange-border{ :style => "margin-bottom:0;" }
    .box-header.orange-background
      .title Participantes encontrado
    .box-content.box-no-padding
      .responsive-table
        .scrollable-area
          %table.table.table-striped{ :style => "margin-bottom:0;" }
            %thead
              %tr
                %th Nombre
                %th Apellido
                %th Evento
                %th Fecha
            %tbody
              - @participants.each do |participant|
                %tr
                  %td= participant.fname
                  %td= participant.lname
                  %td= participant.event.event_type.name
                  %td= participant.event.date
                  -#%td= link_to participant.fname, participant
                  -#%td= link_to participant.lname, participant

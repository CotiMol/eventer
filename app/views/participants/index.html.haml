%h1= @event.event_type.name + " - " + @event.date.to_formatted_s(:short) + " - " + @event.city
%h2= @event.participants.count.to_s + " Participantes"
= link_to 'Actualizar', event_participants_path(@event)
|
= link_to 'Nuevo Registro', new_event_participant_path, :target => "_blank"


%table
  %tr
    %th Nombre
    %th Apellido
    %th Email
    %th TelÃ©fono
    %th Estado
    %th Notas
    %th

  - @participants.each do |participant|
    %tr
      %td= participant.fname
      %td= participant.lname
      %td= participant.email
      %td= participant.phone
      %td
        - if participant.status == "N"
          Nuevo
        - elsif participant.status == "T"
          Contactado
        - elsif participant.status == "C"
          Confirmado
        - elsif participant.status == "X"
          Cancelado
        - elsif participant.status == "D"
          Postergado
      %td= participant.notes
      %td= link_to 'Modificar', edit_event_participant_path(participant.event, participant)
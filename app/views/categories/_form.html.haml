= semantic_form_for @category do |f|
  = f.inputs do
    .grid_12
      = f.input :name
      = f.input :name_en
      = f.input :codename
      = f.input :tagline
      = f.input :tagline_en
    .grid_3
      = f.input :visible
    .grid_1
      = f.input :order
    .grid_12
      = f.input :description
      = f.input :description_en
  
  = f.actions do
    = f.action(:submit)
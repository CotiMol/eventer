= semantic_form_for @event_type do |f|
  = f.inputs do
    .grid_12
      = f.input :name
      = f.input :duration
    .grid_6
      Entrenadores
      - for trainer in Trainer.find(:all)
        %div
          = check_box_tag "event_type[trainer_ids][]", trainer.id, @event_type.trainers.include?(trainer)
          = trainer.name
    .grid_6  
      Categor√≠as
      - for category in Category.find(:all)
        %div
          = check_box_tag "event_type[category_ids][]", category.id, @event_type.categories.include?(category)
          = category.name
    .grid_12
      = f.input :goal
      = f.input :description
      = f.input :recipients
      = f.input :program
      = f.input :faq
      = f.input :materials
  
  = f.actions do
    = f.action(:submit)
